<!-- What is INBA -->
scss:
  .about-us__block {
    position: relative;
    text-align: center;
    padding-top: 4rem;
    padding-bottom: 4rem;
    background-color: rgba(255, 173, 0, 0.9);
  }
  .about-us__block::after {
    content: " ";
    background: url(assets/about_us_bg.jpg) ;
    background-size: cover;
    /*opacity: 0.5;*/
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    height:100%;
    display: block;
    position: absolute !important;
    z-index: -1;
    visibility: visible !important;
  }
  .about-us__block .title {
    text-align: center;
    border-bottom: 1px solid #333;
    font-size: 1.5rem;
    font-weight: bold;
  }
  .about-us__block .subtitle {
    text-align: center;
    color: #333;
    font-size: 1.2rem;
  }
  .about-us-block__description {
  }
  .about-us-block__decoration {
    vertical-align: middle;
    line-height: 80px;
    font-size: 80px;
    text-align: center;
    width: 12rem;
    display: inline-block;
  }

section class="block row full-width collapse about-us__block"
