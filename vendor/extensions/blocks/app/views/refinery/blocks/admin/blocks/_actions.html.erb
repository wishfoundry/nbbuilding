<ul>
  <% if ::Refinery::Blocks::Admin::BlocksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.blocks_admin_blocks_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_blocks_admin_block_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Blocks::Admin::BlocksController.sortable? && ::Refinery::Blocks::Block.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Blocks"),
                 refinery.blocks_admin_blocks_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Blocks"),
                 refinery.blocks_admin_blocks_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
