<%= form_for [refinery, :blocks_admin, @block] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @block,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:content],
                :object => "blocks/block" -%>
  </div>

  <div class='field'>
    <%= f.label :type -%>
    <%= f.text_field :type -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.blocks.admin.blocks.block'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @block.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
