<% content_for :body_content_title do %>
  <%= @block.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @block.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @block.content %>
    </p>
  </section>
  <section>
    <h1>Type</h1>
    <p>
      <%=raw @block.type %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="blocks">
      <% @blocks.each do |block| %>
        <li>
          <%= link_to block.title, refinery.blocks_block_path(block) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
